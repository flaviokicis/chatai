# Copy to .env and set values
TWILIO_AUTH_TOKEN=replace_with_real_auth_token
# Optional public URL base (e.g., https://abcd-1234.ngrok-free.app)
PUBLIC_BASE_URL=

# LLM Configuration
# For Google Gemini (default)
GOOGLE_API_KEY=replace_with_google_api_key
# For OpenAI (alternative)
OPENAI_API_KEY=replace_with_openai_api_key

# LLM Provider: "google_genai" for Google Gemini, "openai" for OpenAI
LLM_PROVIDER=google_genai
# Model name (examples: "gemini-2.5-flash" for Google, "gpt-4o" for OpenAI)
LLM_MODEL=gemini-2.5-flash
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# Leave empty if no password
REDIS_PASSWORD=
# Alternatively, you can provide a full URL:
# REDIS_URL=redis://:password@localhost:6379/0

# SQLAlchemy database URL
DATABASE_URL=postgresql+psycopg://postgres:postgres@db:5432/chatai

# Encryption key for PII (base64 32-byte Fernet key)
# Generate one for local dev:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
PII_ENCRYPTION_KEY=
